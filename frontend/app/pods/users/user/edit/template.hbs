<div class="card #e8f5e9 green lighten-5">
  <div class="card-content black-text">
    <span class="card-title black-text">Edit:</span>
    <form {{action "saveChanges" model on='submit'}}>
		  <div class="form-group">
		    <label for="exampleInputUser1">Name</label>
		    {{input type="text" value=model.name class="form-control" id="exampleInputUser1"}}
		  </div>
		  <div class="form-group">
		    <label for="exampleInputEmail1">Email Address</label>
		    {{input type="text" value=model.email class="form-control" id="exampleInputEmail1"}}
		  </div>
		  <p class="">
		    {{input type="checkbox" checked=model.admin id='check'}} 
		    <label for='check'> Admin</label>
		    
		  </p>
		  <div class="card-action">
		  {{#if model.hasDirtyAttributes}}
		  	<div style="text-align: center;">
		    	<button type='submit' class="btn btn-default" style="width: 100%;">Save Changes</button>
		    </div>
		  {{/if}}
		  </div>
		</form>
  </div>
</div>