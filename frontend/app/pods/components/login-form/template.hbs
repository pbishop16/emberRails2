<div style="width: 320px; margin: 0px auto;">
<div class="card #e8f5e9 green lighten-5">
  <div class="card-content black-text">
    <span class="card-title black-text">Login:</span>
		<form {{action 'authenticate' on='submit'}}>
			<div class='form-group'>
				<label for='indentification'>Login</label>
				{{input value=email placeholder='Enter Login' class='form-control'}}
			</div>
			<div class="form-group">
				<label for='password'>Password</label>
				{{input type='password' value=password placeholder='Enter Password' class='form-control'}}
			</div>
			<div class="card-action">
				{{input type='submit' value='Login' class="btn btn-default"}}
			</div>
		</form>
	</div>
</div>
</div>